
<div class="cont">
<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>
<p>
  <strong>Start time:</strong>
  <%= @event.start_time %>
</p>
<h2>Notification:</h2>
<% @event.notifications.each do |notification| %>
  <p>
    <strong>Description:</strong>
    <%= notification.description %>
    |
     <%= link_to "Delete", [notification.event, notification], method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
  <p>
    <strong>Time:</strong>
    <%= notification.send_time %> 
  </p>
<% end %>
<h2>Add notification:</h2>
<%= form_with(model: [ @event, @event.notifications.build ], local: true) do |form| %>
  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>
  <p>
     <div class="form-group">
          <%= form.label :send_time %>
            <div class="form-group">
              <div class='input-group date' id='datetimepicker2'>
                <%= form.text_field :send_time, class: "form-control" %>
                  <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
        </div>
        <script type="text/javascript">
          $(function () {
            $('#datetimepicker2').datetimepicker({
              format: 'DD/MM/YYYY HH:mm'
            });
          });
        </script>
  </p>
  <p>
    <%= form.submit 'Add Notification', class: "btn btn-primary" %>
  </p>
<% end %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %> |
<%= link_to 'Delete', event_path(@event), method: :delete, data: { confirm: 'Ви впевненні?' } %>
</div>